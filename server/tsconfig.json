{
  "compilerOptions": {
    "baseUrl": "src",
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es6",
    "lib": [
      "es6",
      "esnext",
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "files": [
    "src/main.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "graphql/*": ["./src/graphql/*"]
  }
}